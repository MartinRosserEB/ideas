{% block body %}
<div class="cell"><h2>{{ idea.title }}</h2></div>
<div class="cell"><p><i>{{ idea.creator}}</i></p></div>
<div class="cell">
<div class="cell"><p><strong>{{ idea.votes|length }} Stimme(n)</strong></p></div>
<div class="cell"><p>{{ idea.description }}</p></div>
<div class="cell">
    {% if idea.comments|length > 0 %}<strong>Kommentar(e):</strong><br />{% endif %}
    {% for comment in idea.comments %}
        <p>{{ comment.comment }}<br /><i>{{ comment.creator }}, {{ comment.datetime|date('d.m.Y H:i') }}</i></p>
    {% endfor %}
</div>
</div>
<div class="cell"><p>Kommentar erfassen:</p></div>
<div class="cell">
    {{ form_start(form, {'action': path('comment_idea', {'entity': idea.id}), 'attr': {'id': 'modalForm'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</div>
<button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
</button>
{% endblock %}
