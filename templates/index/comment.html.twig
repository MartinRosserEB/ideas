{% block body %}
<div class="cell">
    <p>Kommentar zur Idee <i>{{ idea }}</i> eingeben.</p>
</div>

<div class="cell">
    {{ form_start(form, {'action': path('comment_idea', {'entity': idea.id}), 'attr': {'id': 'modalForm'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</div>

{% if idea.comments|length > 0 %}
<div class="cell">
    <p>Vorherige Kommentare:</p>
</div>
<div class="cell">
    <div class="grid-x grid-padding-x">
    {% for comment in idea.comments %}
        <div class="cell small-12 medium-8">{{ comment.comment }}</div>
        <div class="cell small-12 medium-4"><i>{{ comment.datetime|date('d.m.Y H:i') }} {{ comment.creator }}</i></div>
    {% endfor %}
    </div>
</div>
{% endif %}

<button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
</button>
{% endblock %}
